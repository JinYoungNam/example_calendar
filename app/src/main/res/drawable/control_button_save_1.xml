<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/color_Control_Button1_Save_Up_Top_1"
                android:centerColor="@color/color_Control_Button1_Save_Up_Center_1"
                android:endColor="@color/color_Control_Button1_Save_Up_Bottom_1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_Control_Button1_Save_Line_0" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="@color/color_Control_Button1_Save_Down_Top_1"
                android:centerColor="@color/color_Control_Button1_Save_Down_Center_1"
                android:endColor="@color/color_Control_Button1_Save_Down_Bottom_1"
                android:angle="270"
                />
            <stroke
                android:width="2dp"
                android:color="@color/color_Control_Button1_Save_Line_0" />
            <corners
                android:radius="2dp" />
        </shape>
        <!--<item android:state_pressed="true" android:color="#ff0000"/>-->
    </item>
</selector>